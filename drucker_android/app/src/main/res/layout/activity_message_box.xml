<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageBoxActivity"
    android:background="@drawable/forum_background2">
    <!--android:background="@drawable/forum_background"-->



    <ImageButton
        android:id="@+id/iBNewPost"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:padding="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iBViewPost"
        app:srcCompat="@drawable/new_post3" />
        <!--app:layout_constraintVertical_bias="0.56"-->
        <!--android:background="@color/colorPrimary"-->


    <ImageButton
        android:id="@+id/iBViewPost"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:padding="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/iBNewPost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/view_post3" />
    android:background="@color/colorPrimary"

</android.support.constraint.ConstraintLayout>